
@{
    ViewBag.Title = "Quiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .container1 {
        position: relative;
        width: 50%;
    }

    .image1 {
        display: block;
        width: 320px;
        height: 270px;
    }

    .overlay1 {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        width: 320px;
        height: 300px;
        opacity: 0;
        transition: .5s ease;
        background-color: powderblue;
    }

    .container1:hover .overlay1 {
        opacity: 1;
    }

    .text1 {
        color: white;
        font-size: 20px;
        position: absolute;
        top: 50%;
        left: 50%;
        -webkit-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        text-align: center;
    }

    .container2 {
        position: relative;
        width: 50%;
    }

    .image2 {
        display: block;
        width: 362px;
        height: 270px;
    }

    .overlay2 {
        position: absolute;
        bottom: 100%;
        left: 0;
        right: 0;
        overflow: hidden;
        width: 362px;
        height: 0;
        transition: .5s ease;
        background-color: powderblue;
    }

    .container2:hover .overlay2 {
        bottom: 0;
        height: 100%;
    }

    .text2 {
        color: white;
        font-size: 20px;
        position: absolute;
        top: 50%;
        left: 50%;
        -webkit-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        text-align: center;
    }

    .center {
        margin: auto;
        width: 60%;
        border: 3px solid #73AD21;
        padding: 10px;
    }

    .wow {
        visibility: hidden;
    }
</style>
<!-- bradcam_area  -->
<div class="bradcam_area bradcam_bg_11">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-xl-9 col-md-9 col-md-12" style="padding-top: 50px;">
                <div class="bradcam_text text-center">
                    <h3>Fun day to day conversation</h3>
                    <p style="text-transform:none">
                        We provide more useful English scene dialogue to practice in your daily life. 
                        Those day to day conversation will help you improve you english speaking skill and 
                        it will be directly applied in you daily life.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ bradcam_area  -->
<!-- service_area_start  -->
<div class="service_area add_padding" style="padding-top: 50px;">
    <div class="container">
        <div class="row" style="justify-content: center; height: 80px;margin-top: 10px;margin-bottom: 50px;">
            <div class="section_title text-center mb-50">
                <h3>Day-to-day conversation Practice</h3>
                <p>Click any of below printable pictures to download</p>
            </div>
        </div>
        <div class="row" style="justify-content: center;">
            <div class="col-md-6 col-lg-4 wow fadeInDownBig" data-wow-delay="0.1s">
                <div class="single_service">
                    <div class="container1">
                        <a href="~/File/Visiting the Cinema.pdf" title="Cinema Conversation" download>
                            <img alt="ImageName" src="~/img/printable/Cinema.png" style="width: 320px;height: 270px;">
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 wow rollIn" data-wow-delay="0.1s">
                <div class="single_service">
                    <div class="container1">
                        <a href="~/File/drug_store.pdf" title="Drug Store Conversation" download>
                            <img alt="ImageName" src="~/img/printable/drugStore.png" style="width: 320px;height: 270px;">
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-lg-4 wow rotateInDownLeft">
                <div class="single_service">
                    <div class="container1">
                        <a href="~/File/Visiting The Doctor_Final.pdf" title="Doctor Conversation" download>
                            <img alt="ImageName" src="~/img/printable/doctor.png" style="width: 320px;height: 270px;">
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 wow slideInUp">
                <div class="single_service">
                    <div class="container1">
                        <a href="~/File/Visiting Restaraunt.pdf" title="Restaraunt Conversation" download>
                            <img alt="ImageName" src="~/img/printable/Restaraunt.png" style="width: 320px;height: 270px;">
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 wow rotateInDownRight">
                <div class="single_service">
                    <div class="container1">
                        <a href="~/File/shopping_convo.pdf" title="shopping Conversation" download>
                            <img alt="ImageName" src="~/img/printable/shopping.png" style="width: 320px;height: 270px;">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
